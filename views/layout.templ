package views

import "github.com/olivere/vite"

templ Layout(title string) {
	<!DOCTYPE html>
	<html lang="ja">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title }</title>
			@templ.Raw(vite.ScriptsFromContext(ctx))
		</head>
		<body>
			<main class="container">
				{ children... }
			</main>
		</body>
	</html>
}
